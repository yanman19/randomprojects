    const finalJeopardyQuestion = {
        category: "LANDLOCKED COUNTRIES",
        q: "Of the world's 44 landlocked countries, these two are the only ones that are doubly landlocked, meaning they are surrounded entirely by other landlocked countries.",
        a: "What are Liechtenstein and Uzbekistan?"
